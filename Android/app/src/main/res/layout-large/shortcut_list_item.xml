<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="154dp"
        android:src="@drawable/shortcut_item_divider"
        android:contentDescription="@null"/>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shorcut_item_large"
    android:layout_width="154dp"
    android:layout_height="154dp"
    android:paddingBottom="6dp"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shortcut_item_lock_image"
        style="@style/homeScreenIcons"
        android:layout_width="13dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/menu_lock_icon"
        android:contentDescription="@null"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/shortcut_image_layout"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/shortcut_item_image_bg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@drawable/shortcut_icon_background"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/shortcut_item_image"
            style="@style/homeScreenIcons"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:contentDescription="@null" />

    </RelativeLayout>

    <TextView
        android:id="@+id/shortcut_item_label"
        style="@style/homeScreenShortcutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:gravity="center"
        android:textSize="16sp" />

</RelativeLayout>

</LinearLayout>