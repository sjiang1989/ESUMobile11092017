<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/news_detail_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/content_padding" >

            <!--
                 <LinearLayout
       android:id="@+id/news_detail_inner_header_layout"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="3"
       android:orientation="vertical"  >
            -->

            <TextView
                android:id="@+id/news_detail_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textIsSelectable="true"
                android:textSize="@dimen/detail_title_text_size" />

            <!-- </LinearLayout> -->

            <ImageView
                android:id="@+id/news_detail_logo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/default_image"
                android:maxHeight="80dp"
                android:maxWidth="80dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_body_content_container"
            style="@style/contentBody.PaddingRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/news_detail_date"
                style="@style/detailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/news_detail_content"
                style="@style/detailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true" />

            <!--
		    <WebView 
		        android:id="@+id/news_detail_content"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"/>
            -->

            <TextView
                android:id="@+id/news_detail_link"
                style="@style/detailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
