<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlebar"
        layout="@layout/customtitlebar" />

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" >
    </TextView>

    <include
        android:id="@+id/separatorTitle"
        layout="@layout/separator" >
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/startDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="6dp"
                    android:text="@string/startDateLabel" />

                <TextView
                    android:id="@+id/eventStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/startDateLabel"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/startDateLabel"
                    android:paddingLeft="4dp" />

                <TextView
                    android:id="@+id/eventStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/startDateLabel"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/eventStartDate"
                    android:paddingLeft="4dp" />

                <TextView
                    android:id="@+id/endDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/startDateLabel"
                    android:paddingLeft="6dp"
                    android:text="@string/endDateLabel" />

                <TextView
                    android:id="@+id/eventEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/endDateLabel"
                    android:layout_alignTop="@+id/endDateLabel"
                    android:layout_toRightOf="@+id/endDateLabel"
                    android:paddingLeft="4dp" />

                <TextView
                    android:id="@+id/eventEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/endDateLabel"
                    android:layout_alignTop="@+id/endDateLabel"
                    android:layout_toRightOf="@+id/eventEndDate"
                    android:paddingLeft="4dp" />

                <TextView
                    android:id="@+id/allDayEventLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/eventStartTime"
                    android:paddingLeft="6dp"
                    android:text="@string/allDay"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:paddingLeft="6dp" >
            </TextView>

            <include
                android:id="@+id/separatorDetails"
                layout="@layout/separator" >
            </include>

            <TextView
                android:id="@+id/eventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:paddingLeft="6dp" >
            </TextView>

            <include
                android:id="@+id/separatorDescription"
                layout="@layout/separator" >
            </include>

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <Button
                    android:id="@+id/eventCalendarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4sp"
                    android:padding="12dp"
                    android:text="@string/addToMyCalendar" >
                </Button>

                <Button
                    android:id="@+id/eventShareButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4sp"
                    android:padding="12dp"
                    android:text="@string/shareWithFriends" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>