<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/titlebar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/titlebar_left_icon"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:contentDescription="@string/titlebarIcon"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/titlebar_right_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/titlebar_right_icon"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:contentDescription="@string/titlebarIcon"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/titlebar_progress_circular"
                style="?android:attr/progressBarStyleSmallInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:max="10000"
                android:visibility="gone" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/titlebar_progress_horizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dip"
            android:layout_toLeftOf="@+id/titlebar_right_container"
            android:layout_toRightOf="@+id/titlebar_left_icon"
            android:max="10000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/titlebar_right_container"
            android:layout_toRightOf="@+id/titlebar_left_icon"
            android:paddingLeft="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:id="@+id/titlebar_separator"
            android:layout_width="wrap_content"
            android:layout_height="2sp"
            android:layout_below="@id/titlebar_title"
            android:background="#FFDDDDDD" />
    </RelativeLayout>

</merge>